<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FreshMart - Fresh Produce</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/footer.css">
<style>
.custom-alert {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border: 1px solid #ccc;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    width: 300px;
}

.custom-alert-content button {
    margin-top: 15px;
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.custom-alert-content button:hover {
    background-color: #218838;
}

.hidden {
    display: none;
}

.custom-alert-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 999;
}
#center-notification {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #fff;
    border: 1px solid #ccc;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 1000;
    padding: 20px;
    text-align: center;
    border-radius: 10px;
    width: 300px;
}

#center-notification.hidden {
    display: none;
}

.center-notification-content button {
    margin-top: 15px;
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.center-notification-content button:hover {
    background-color: #218838;
}
</style>
</head>
<body>
            <%- include('nav') %>

<main>
    <h1>Our Products</h1>
    <div class="product-grid">
        <% fruits.forEach(fruit => { %>
            <div class="product-card">
                <img src="<%= fruit.img %>" alt="<%= fruit.name %>">
                <div class="product-info">
                    <h3><%= fruit.name %></h3>
                    <p><%= fruit.description || 'No description available.' %></p>
                    <p><strong>Regular Price:</strong> ₹<%= fruit.regprice %>/kg</p>
                    <p>Max Quantity: <%= fruit.maxquantity %></p>
                        <!-- Display subscription options -->
                        <div class="subscription-options">
                            <% if (fruit['3mnths'] && fruit['3mnths'] > 0) { %>
                                <button onclick="showAlert('<%- fruit._id %>', '3 Months', <%- fruit['3mnths'] %>)">
                                    3 Months - ₹<%= fruit['3mnths'] %>/kg
                                </button>
                                    <% } else { %>
                                <p>No subscription option for 3 months</p>
                            <% } %>
                            <% if (fruit['6mnths']) { %>
                                <button onclick="showAlert('<%- fruit._id %>', '6 Months', <%- fruit['6mnths'] %>)">
                                    6 Months - ₹<%= fruit['6mnths'] %>/kg
                                </button>
                                    <% } else { %>
                                <p>No subscription option for 6 months</p>
                            <% } %>
                            <% if (fruit['1year']) { %>
                                <button onclick="showAlert('<%- fruit._id %>', '1 Year', <%- fruit['1year'] %>)">
                                    1 Year - ₹<%= fruit['1year'] %>/kg
                                </button>
                                <% } else { %>
                                <p>No subscription option for 1 year</p>
                            <% } %>
                        </div>
                </div>
            </div>
        <% }); %>
    </div>



</main>
<footer class="footer">
    <div class="footer-container">
        <div class="footer-section">
            <h3>FreshMart</h3>
            <p>Bringing fresh produce directly from farms to your table.</p>
        </div>
        <div class="footer-section">
            <h3>Quick Links</h3>
            <ul>
                <li><a href="products.html">Products</a></li>
                <li><a href="careers.html">Careers</a></li>
                <li><a href="contact.html">Contact</a></li>
                <li><a href="faqs.html">FAQs</a></li>
            </ul>
        </div>
        <div class="footer-section">
            <h3>Follow Us</h3>
            <div class="social-links">
                <a href="#" class="social-link">Facebook</a>
                <a href="#" class="social-link">Instagram</a>
                <a href="#" class="social-link">Twitter</a>
            </div>
        </div>
    </div>
    <div class="footer-bottom">
        <p>&copy; 2024 FreshMart. All rights reserved.</p>
    </div>
</footer>
<div id="custom-alert" class="custom-alert hidden">
    <div class="custom-alert-content">
        <p id="custom-alert-message"></p>
        <button onclick="confirmAction()">Yes</button>
        <button onclick="closeAlert()">No</button>
    </div>
</div>

<div id="center-notification" class="hidden">
    <div class="center-notification-content">
        <p id="center-notification-message"></p>
        <button onclick="closeCenterNotification()">OK</button>
    </div>
</div>
<script>
// Fetch product details and subscription plans
function fetchProductDetails() {
    fetch('/get-fruits')
    .then(response => response.json())
    .then(data => {
        if (data.productDetails) {
        const product = data.productDetails;
        
        // Display the product details (e.g., name, description)
        const productContainer = document.getElementById('product-details');
        productContainer.innerHTML = `
            <h1>${product.name}</h1>
            <p>${product.description}</p>
            <p>Price: ₹${product.price}</p>
        `;
        
        // Display the subscription plans as buttons
        const subscriptionContainer = document.getElementById('subscription-plans');
        product.subscriptionPlans.forEach(plan => {
            const button = document.createElement('button');
            button.innerText = `${plan.duration} - ₹${plan.price}`;
            button.onclick = () => selectSubscription(plan);
            subscriptionContainer.appendChild(button);
        });
        }
    })
    .catch(error => console.error('Error fetching product details:', error));
}

// Handle subscription selection
function selectSubscription(plan) {
  // Store the selected subscription plan in sessionStorage
    sessionStorage.setItem('selectedPlan', JSON.stringify(plan));
    alert(`You selected: ${plan.duration} - ₹${plan.price}`);
  // Optionally, redirect to the order page or show a confirmation
  window.location.href = '/order'; // Example redirection to order page
}
function showAlert(productId, duration, price) {
    const alertBox = document.getElementById('custom-alert');
    const alertMessage = document.getElementById('custom-alert-message');
    
    alertMessage.innerText = `Do you want to subscribe for ${duration} at ₹${price}?`;
    alertBox.classList.remove('hidden');

    // Store the confirmation details in a temporary variable
    alertBox.dataset.productId = productId;
    alertBox.dataset.duration = duration;
    alertBox.dataset.price = price;

    // Add overlay for better focus
    const overlay = document.createElement('div');
    overlay.className = 'custom-alert-overlay';
    overlay.id = 'alert-overlay';
    document.body.appendChild(overlay);
}

function closeAlert() {
    const alertBox = document.getElementById('custom-alert');
    alertBox.classList.add('hidden');

    const overlay = document.getElementById('alert-overlay');
    if (overlay) {
        document.body.removeChild(overlay);
    }
}

function confirmAction() {
    const alertBox = document.getElementById('custom-alert');
    const { productId, duration, price } = alertBox.dataset;
    fetch('/subscription-details', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, duration, price })
            })
            .then(response => response.json())
            .then(data => {
                alert(data.message);
            })
            .catch(error => {
                alert('Something went wrong. Please try again later.');
                console.error('Error:', error);
            });

    // Proceed with subscription logic
    window.location.href = `/subscription-details?productId=${productId}&duration=${duration}&price=${price}`;

    // Close the alert
    closeAlert();
}


// Fetch product details on page load
window.onload = fetchProductDetails;
function showCenterNotification(message) {
    const notificationBox = document.getElementById('center-notification');
    const notificationMessage = document.getElementById('center-notification-message');

    notificationMessage.innerText = message;
    notificationBox.classList.remove('hidden');
}

// Function to close the notification
function closeCenterNotification() {
    const notificationBox = document.getElementById('center-notification');
    notificationBox.classList.add('hidden');
}

// Example usage
showCenterNotification("You already have an active subscription for this product.");
</script>
</body>
</html>

